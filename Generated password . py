import random
import string

password_is = []

print("****Welcome to the Password Generation! ****")
number_password = int(input("Enter the total number of characters in the password:   "))
number_of_latter = int(input("Enter the number of latter in the password: "))
number_of_number = int(input("Enter the number of numbers in the password: "))
number_of_symbols = int(input("Enter the number of symbols: "))

if number_password == number_of_latter + number_of_number + number_of_symbols :
    password_is += random.choices(string.punctuation, k=number_of_symbols)
    password_is += random.choices(string.digits, k= number_of_number)
    password_is += random.choices(string.ascii_letters, k= number_of_latter)
    random.shuffle(password_is)
    password = "".join(password_is)
    
    print(f"**\nGenerated password is: {password} **")

else : 
    print("\nInvalid input, The sum of latter,number and symbols doesn't match the password length.")
